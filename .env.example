# LOL-65B Environment Variables
# Copy this to .env (NOT .env.local) — Prisma CLI reads .env via dotenv
# Next.js will also read .env automatically

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=           # https://<project-ref>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=      # Project Settings > API > anon/public
SUPABASE_SERVICE_ROLE_KEY=          # Project Settings > API > service_role (NEVER expose client-side)

# Database (Prisma)
# Pooled connection (PgBouncer) — used by the app at runtime
DATABASE_URL=                       # postgresql://postgres.<ref>:<pw>@aws-0-<region>.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1
# Direct connection — used for Prisma migrations only
DIRECT_URL=                         # postgresql://postgres:<pw>@db.<project-ref>.supabase.co:5432/postgres

# HuggingFace (image generation)
HUGGINGFACE_API_KEY=

# Replicate (fallback image generation)
REPLICATE_API_TOKEN=

# BYOK Encryption (for storing user/agent provider API keys)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=
